<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">
    <RelativeLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimaryDark"
            android:layout_height="250dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/fotoprofil"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/circlebackground"
                android:src="@drawable/ic_make_up"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="21sp"
                android:textColor="#FFFFFF"
                android:text="Username"/>
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:orientation="horizontal">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_resume"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Edit Profil"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_rating"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="History Rating"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="320dp">
            <TextView
                android:id="@+id/txtId"
                android:layout_width="266dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="ID User"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tvIdUser"
                android:layout_width="266dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="ID User"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtNama"
                android:layout_width="266dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Nama "
                android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tvNama"
                android:layout_width="266dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Namalengkap"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtUmur"
                android:layout_width="266dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Age "
                android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tvUmur"
                android:layout_width="266dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Umur "
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtJenis"
                android:layout_width="266dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Skin Type"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tvJenis"
                android:layout_width="266dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="jeniskulit"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtWarna"
                android:layout_width="266dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Skin Tone"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tvWarna"
                android:layout_width="266dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="warnakulit"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>