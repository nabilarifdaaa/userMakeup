<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="15dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="15dp"
    android:background="@color/colorPrimaryDark"
    tools:context=".SignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/logoo" />
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imgAddPhotoId"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/default_user" />
        <Button
            android:id="@+id/btAddPhotoId"
            style="@style/button_style"
            android:onClick="button_onClick"
            android:text="Add Photo" />
        <Button
            android:id="@+id/btCapture"
            style="@style/button_style"
            android:onClick="button_onClick"
            android:text="Take Picture" />

        <EditText
            android:id="@+id/txtNama"
            style="@style/editText_style"
            android:hint="Nama"
            android:inputType="text" />

        <EditText
            android:id="@+id/txtUmur"
            style="@style/editText_style"
            android:hint="Umur"
            android:inputType="text" />

        <EditText
            android:id="@+id/txtJenisKulit"
            style="@style/editText_style"
            android:hint="Jenis Kulit"
            android:inputType="text" />

        <EditText
            android:id="@+id/txtWarnaKulit"
            style="@style/editText_style"
            android:hint="Warna Kulit"
            android:inputType="text" />

        <EditText
            android:id="@+id/txtUsername"
            style="@style/editText_style"
            android:hint="Username"
            android:inputType="text" />

        <EditText
            android:id="@+id/txtPassword"
            style="@style/editText_style"
            android:hint="Password"
            android:inputType="textPassword" />

        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonSigup"
                style="@style/button_style"
                android:onClick="button_onClick"
                android:text="Sign Up" />

            <Button
                android:id="@+id/buttonCancel"
                style="@style/button_style"
                android:onClick="button_onClick"
                android:text="Cancel" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvAddMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/LinearLayout"
            android:hint="Pesan"
            android:textColor="#FFFFFF"
            android:inputType="textMultiLine"
            android:textSize="20dp"/>
    </LinearLayout>

</ScrollView>