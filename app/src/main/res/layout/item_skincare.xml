<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tvNamaProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:hint="Nama Produk"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/imgPembeli"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/tvNamaProduk"
            android:layout_marginTop="10dp"
            android:src="@drawable/default_user" />

        <TextView
            android:id="@+id/tvIdProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imgPembeli"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgPembeli"
            android:hint="Id Produk"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tvJenis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvIdProduk"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgPembeli"
            android:hint="Jenis :"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvJenis"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgPembeli"
            android:hint="Harga :"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHarga"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgPembeli"
            android:hint="Detail :"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/mint"/>

</LinearLayout>